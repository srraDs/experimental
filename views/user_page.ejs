<html>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" media="all" href="/css/prof_list.css">

    <title><%= name %> Reviews</title>

</head>

<body>
    <!------------------NAVBAR--------------------->
    <div class="navbar">
        <a class="logo" href="/"> <img src="/images/logo.png" alt="Logo"></a>
        <a class="name" href="/">PROFADVISOR</a>
        <a class="navbutton" href="/settings/<%= user.id %>">SETTINGS</a>
    </div>
    <!--Content-->
    <div class="info-container">
        <!-------------------PROF INFO------------------>
        <div class="info">
            <header>User Info:</header>
            <p> Username: <%= user.username %><br>
            </p>
        </div>
    </div>
    <div class="container">
    <ul>
        <% reviews.forEach(function(review){ %>
            <li class="review-content">
                <div class="review-container">
                    <div class="user-icon">
                        <img src="/images/icon.png">
                    </div>
                    <div class="name">
                        <span>Review for</span>
                        <p class="username">gpwtqibbia</p>
                    </div>
                    <div class="del-btn">
                        <form class="del-form" action="/deletePost" method="post">
                            <input type="hidden" value="<%= review.id %>" name="reviewID">
                            <button type="submit" class="fa-solid fa-trash" id="del-btn"></button>
                        </form>
                    </div>
                    <div class="user-review">
                        <p>
                            <%= review.reviewContent %>
                        </p>
                    </div>
                    <div class="review-likes">
                        <span class="fa-solid fa-thumbs-up"></span>
                        <span class="likes">
                            <%= review.likes %>
                        </span>
                    </div>
                    <div class="like-btn">
                        <form class="likes-form" action="/updateLikes" method="post">
                            <input type="hidden" value="<%= review.id %>" name="reviewID">
                            <button type="submit" class="fa-thumbs-up fa-regular" id="like=btn"></button>
                        </form>
                    </div>
                </div>
            </li>
            <% }); %>
    </ul>
    </div>

</body>

</html>